<div class="full flex">
    <div class="container flex">
        <!-- Make each course a link -->
        <div class="panel full">
            <img class="large" src="{{avatarDir}}" alt="avatar">
            <h1>{{firstName}} {{lastName}}</h1>
            <hr>
            <p>{{bio}}</p>
            <hr>
            <span>Courses</span>
            <br>
            <ul>
                {{#each courses}}
                <li><a onclick="requestView('/courses/{{this.CRN}}')">{{this.title}}</a></li>
                {{/each}}
            </ul>
            <span>Contacts</span>
            <br>
            <ul>
                {{#each contacts}}
                <li><a onclick="requestView('/user/{{this.userID}}')">{{this.firstName}} {{this.lastName}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>