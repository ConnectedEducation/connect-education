<div class="full flex">
    <div class="container flex">
        {{#each courses}}
            <div class="panel full clickable" onclick="requestView('/courses/{{this.CRN}}')">
                <span>{{this.title}}</span>
                <hr>
                <p>{{this.description}}</p>
                <!-- Update onclick to pass argument /course/:courseID -->
                <button class="coursesBtn" onclick="requestView('/courses/{{this.CRN}}')">Go to course</button>
            </div>
        {{else}}
        <p class="center">No courses.</p>
        {{/each}}
    </div>
</div>
